@model MyRideSharing.Models.CarOwner

@{
    ViewBag.Title = "ثبت ماشین ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="info text-center">
    <div class="info-title"><strong>ثبت ماشین</strong></div>
    <hr>
</div>

@ViewBag.Error
@ViewBag.Message
@using (Html.BeginForm("Create", "CarOwners", FormMethod.Post, new { @class = "form-horizontal text-center" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary()

    @Html.LabelFor(model => model.CarPlate)
    <br />
    @Html.EditorFor(model => model.CarPlate)
    <br />
    @Html.ValidationMessageFor(model => model.CarPlate)
    <br />


    @Html.LabelFor(model => model.CarName)
    <br />
    @Html.EditorFor(model => model.CarName)
    <br />
    @Html.ValidationMessageFor(model => model.CarName)
    <br />


    @Html.LabelFor(model => model.CarColor)
    <br />
    @Html.EditorFor(model => model.CarColor)
    @Html.ValidationMessageFor(model => model.CarColor)
    <br />

    @Html.LabelFor(model => model.CarProdYear)
    <br />
    @Html.EditorFor(model => model.CarProdYear, new { maxlength = "2", onkeyup = "this.value = this.value.replace(/[^0-9]/, '')" })

    <br />
    @Html.ValidationMessageFor(model => model.CarProdYear)
    <br />
    @Html.LabelFor(model => model.LicenseNumber)
    <br />
    @Html.EditorFor(model => model.LicenseNumber, new { maxlength = "10", onkeyup = "this.value = this.value.replace(/[^0-9]/, '')" })
    <br />
    @Html.ValidationMessageFor(model => model.LicenseNumber)
    <br />

    @Html.LabelFor(model => model.Description)
    <br />
    @Html.EditorFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)
    <br />
    <br />
    <br />
    <button class="btn btn-default-custom" type="submit" value="Edit">ثبت</button>


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
