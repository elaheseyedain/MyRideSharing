<hr />
@using (Html.BeginForm("GoToUni", "Rides", FormMethod.Post, new { @class = "form-vertical text-right" }))
{
    @Html.AntiForgeryToken()
<div class="row">
    <h4>میخوام برم دانشگاه</h4>
    <div class="col-lg-3"></div>

    <div class="col-lg-2">
        <div class="col-lg-10">
            <button class="btn btn-default-custom" name="submit" type="submit">جستجو</button>
        </div>
    </div>





    <div class="col-lg-2">
        <div class="col-lg-10">
            <span class="fa fa-calendar" aria-hidden="true"></span>

            @Html.LabelFor(model => model.myDate)

            @Html.DisplayFor(model => model.myDate)
            @Html.EditorFor(model => model.myDate)

            @Html.ValidationMessageFor(model => model.myDate)
            <br />

        </div>

    </div>
    


    <div class="col-lg-2">

        <div class="col-lg-10">
            <span class="fa fa-clock-o" aria-hidden="true"></span>

            <label for="Clock">زمان حرکت </label><br />
            <div class="input-group clockpicker">

            @Html.EditorFor(model => model.myTime, new
               {
                   @class = "form-control",
                   value = "09:30"
               })
            </div>

        </div>
    </div>


    <div class="col-lg-2">
        <div class="col-lg-10">


            <span class="fa fa-map-marker" aria-hidden="true">
            </span>
            <input type="text" name="source" id="source" placeholder="مبدا حرکت" />
        </div>

    </div>





</div>
}



